      {
        name: 'Painel do Sistema',
        icon: WrenchScrewdriverIcon,
        resource: 'system-panel',
        roles: ['Super Admin', 'Administrador'],
        children: [
          {
            name: 'Funcionalidades',
            href: '/admin/system-features',
            icon: CogIcon,
            resource: 'funcinalidades-do-sistema',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Categorias',
