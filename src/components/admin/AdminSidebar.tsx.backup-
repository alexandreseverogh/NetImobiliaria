            roles: ['Super Admin', 'Administrador']
          },
        ]
      },
      
      // 2. REORGANIZADO: PAINEL ADMINISTRATIVO
      {
        name: 'Painel Administrativo',
        icon: ShieldCheckIcon,
        resource: 'admin-panel',
        roles: ['Super Admin', 'Administrador'],
        children: [
          {
            name: 'Hierarquia de Perfis',
            href: '/admin/hierarquia-perfis',
            icon: UserGroupIcon,
            resource: 'hierarchy',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Gest√£o de Perfis',
            href: '/admin/perfis',
            icon: ShieldCheckIcon,
            resource: 'roles',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Configurar Permiss√µes',
            href: '/admin/permissoes',
            icon: CogIcon,
            resource: 'permissions',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Usu√°rios',
            href: '/admin/usuarios',
            icon: UsersIcon,
            resource: 'usuarios',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Tipos de Documentos',
            href: '/admin/categorias-tipos-documentos',
            icon: DocumentTextIcon,
            resource: 'tipos-de-documentos',
            roles: ['Super Admin', 'Administrador']
          }
        ]
      },
      {
        name: 'Amenidades',
        icon: TagIcon,
        resource: 'amenidades',
        roles: ['Super Admin', 'Administrador', 'Corretor'],
        children: [
          {
            name: 'Categorias',
            href: '/admin/categorias-amenidades',
            icon: Squares2X2Icon,
            resource: 'categorias-amenidades',
            roles: ['Super Admin', 'Administrador', 'Corretor']
          },
          {
            name: 'Amenidades',
            href: '/admin/amenidades',
            icon: TagIcon,
            resource: 'amenidades',
            roles: ['Super Admin', 'Administrador', 'Corretor']
          }
        ]
      },
      {
        name: 'Proximidades',
        icon: MapPinIcon,
        resource: 'proximidades',
        roles: ['Super Admin', 'Administrador', 'Corretor'],
        children: [
          {
            name: 'Categorias',
            href: '/admin/categorias-proximidades',
            icon: Squares2X2Icon,
            resource: 'categorias-proximidades',
            roles: ['Super Admin', 'Administrador', 'Corretor']
          },
          {
            name: 'Proximidades',
            href: '/admin/proximidades',
            icon: MapPinIcon,
            resource: 'proximidades',
            roles: ['Super Admin', 'Administrador', 'Corretor']
          }
        ]
      },
      {
        name: 'Im√≥veis',
        icon: BuildingOfficeIcon,
        resource: 'imoveis',
        roles: ['Super Admin', 'Administrador', 'Corretor'],
        children: [
          {
            name: 'Tipos',
            href: '/admin/tipos-imoveis',
            icon: CogIcon,
            resource: 'tipos-imoveis',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Finalidades',
            href: '/admin/finalidades',
            icon: CogIcon,
            resource: 'finalidades',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Status',
            href: '/admin/status-imovel',
            icon: CheckCircleIcon,
            resource: 'status-imovel',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Mudan√ßa de Status',
            href: '/admin/mudancas-status',
            icon: ClipboardDocumentListIcon,
            resource: 'status-imovel',
            roles: ['Super Admin', 'Administrador']
          },
          {
            name: 'Cadastro',
            href: '/admin/imoveis',
