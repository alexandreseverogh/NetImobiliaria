# Hostinger VPS - PRODUÇÃO
# Copie para .env.production no servidor e ajuste valores

# Domínio para HTTPS (Caddy)
DOMAIN=seudominio.com.br
LETSENCRYPT_EMAIL=admin@seudominio.com.br

# Postgres (padronizado)
POSTGRES_IMAGE=postgres:17-alpine
DB_NAME=net_imobiliaria
DB_USER=postgres
DB_PASSWORD=CHANGE_ME

# App
JWT_SECRET=CHANGE_ME_SUPER_LONG
NEXT_PUBLIC_APP_URL=https://seudominio.com.br
CRON_SECRET=CHANGE_ME_SUPER_LONG

# Postgres tuning (produção)
PG_SHARED_BUFFERS=1GB
PG_EFFECTIVE_CACHE_SIZE=3GB
PG_MAINTENANCE_WORK_MEM=256MB
PG_WORK_MEM=8MB
PG_MAX_CONNECTIONS=200

# Opcional (tradução do feed)
LIBRETRANSLATE_URL=https://libretranslate.com

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================
# Este arquivo contém as configurações específicas para ambiente de produção
# Copie este arquivo para .env.local e ajuste conforme necessário

# ===========================================
# AMBIENTE
# ===========================================
NODE_ENV=production

# ===========================================
# BANCO DE DADOS
# ===========================================
DB_HOST=seu_host_de_producao
DB_PORT=5432
DB_NAME=net_imobiliaria_prod
DB_USER=seu_usuario_producao
DB_PASSWORD=sua_senha_super_segura_de_producao

# ===========================================
# AUTENTICAÇÃO
# ===========================================
JWT_SECRET=sua_chave_secreta_jwt_super_segura_para_producao_mude_esta_chave
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# EMAIL (Gmail SMTP)
# ===========================================
GMAIL_USER=seu_email_de_producao@gmail.com
GMAIL_APP_PASSWORD=sua_senha_de_app_do_gmail_de_producao

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# 2FA - Configurações rigorosas para produção
TWO_FACTOR_REQUIRED=true
TWO_FACTOR_DEV_CODES_ENABLED=false
TWO_FACTOR_CODE_EXPIRATION=600000

# Rate Limiting - Configurações rigorosas para produção
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900000
RATE_LIMIT_BLOCK_DURATION=1800000
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=900000

# Sessões - Configurações rigorosas para produção
SESSION_TIMEOUT=1800000
SESSION_MAX_ACTIVE=5
SESSION_AUTO_REFRESH=true

# Cache - Habilitado para produção
CACHE_ENABLED=true
CACHE_TTL=300000

# Logging - Mínimo para produção
LOG_LEVEL=error
LOG_SQL_QUERIES=false
LOG_AUDIT=true
LOG_CONSOLE=false
LOG_PERFORMANCE=false

# Debug - Desabilitado para produção
DEBUG_ENABLED=false
DEBUG_DETAILED_ERRORS=false
DEBUG_FULL_STACK_TRACE=false

# Upload - Configurações restritivas para produção
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# API - Configurações rigorosas para produção
API_TIMEOUT=30000
API_RETRY_ENABLED=true
API_STRICT_VALIDATION=true

# CORS - Configurações restritivas para produção
CORS_STRICT=true
ALLOWED_ORIGINS=https://seu-dominio.com.br,https://www.seu-dominio.com.br

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA (RIGOROSAS PARA PROD)
# ===========================================

# Cookies seguros em produção (HTTPS)
COOKIES_SECURE=true

# HTTPS obrigatório em produção
FORCE_HTTPS=true

# Headers de segurança rigorosos
SECURITY_HEADERS_RELAXED=false

# ===========================================
# CONFIGURAÇÕES ESPECÍFICAS DE PRODUÇÃO
# ===========================================

# Hot reload desabilitado
HOT_RELOAD=false

# Source maps desabilitados
SOURCE_MAPS=false

# Redux DevTools desabilitado
REDUX_DEVTOOLS=false

# React DevTools desabilitado
REACT_DEVTOOLS=false

# ===========================================
# CONFIGURAÇÕES DE EMAIL DE PRODUÇÃO
# ===========================================

# Email de produção
PROD_EMAIL=noreply@seu-dominio.com.br

# SMTP de produção (configurar conforme seu provedor)
PROD_SMTP_HOST=smtp.gmail.com
PROD_SMTP_PORT=587
PROD_SMTP_SECURE=true
PROD_SMTP_USER=seu_email_de_producao@gmail.com
PROD_SMTP_PASS=sua_senha_de_app_do_gmail_de_producao

# ===========================================
# CONFIGURAÇÕES DE BANCO DE DADOS DE PRODUÇÃO
# ===========================================

# Pool de conexões otimizado para produção
DB_MAX_CONNECTIONS=20
DB_QUERY_TIMEOUT=10000

# Logs de query desabilitados
DB_LOG_QUERIES=false

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================

# Logs de performance desabilitados
PERFORMANCE_LOGS=false

# Logs de auditoria habilitados
AUDIT_LOGS=true

# Logs de SQL desabilitados
SQL_LOGS=false

# ===========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ===========================================

# Compressão habilitada
COMPRESS_ENABLED=true

# Minificação habilitada
MINIFY_ENABLED=true

# Otimizações de produção
PRODUCTION_OPTIMIZATIONS=true

# ===========================================
# CONFIGURAÇÕES DE DOMÍNIO
# ===========================================

# Domínio principal
DOMAIN=seu-dominio.com.br

# Subdomínios permitidos
ALLOWED_SUBDOMAINS=www,admin,api

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================

# Backup automático habilitado
BACKUP_ENABLED=true

# Frequência de backup (em horas)
BACKUP_INTERVAL=24

# Retenção de backups (em dias)
BACKUP_RETENTION=30

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO EXTERNO
# ===========================================

# Sentry para monitoramento de erros
SENTRY_DSN=sua_dsn_do_sentry

# Google Analytics
GOOGLE_ANALYTICS_ID=seu_id_do_google_analytics

# ===========================================
# CONFIGURAÇÕES DE CDN
# ===========================================

# CDN habilitado
CDN_ENABLED=true

# URL do CDN
CDN_URL=https://cdn.seu-dominio.com.br

# ===========================================
# NOTAS IMPORTANTES
# ===========================================
# 1. Este arquivo é específico para produção
# 2. NUNCA commite este arquivo com senhas reais
# 3. Use variáveis de ambiente do servidor para informações sensíveis
# 4. Configure SSL/TLS adequadamente
# 5. Monitore logs e performance regularmente
# 6. Faça backups regulares
# 7. Mantenha este arquivo fora do controle de versão (.gitignore)


