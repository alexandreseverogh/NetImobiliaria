# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================
# Este arquivo contém as configurações específicas para ambiente de desenvolvimento
# Copie este arquivo para .env.local e ajuste conforme necessário

# ===========================================
# AMBIENTE
# ===========================================
NODE_ENV=development

# ===========================================
# BANCO DE DADOS
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=net_imobiliaria
DB_USER=postgres
DB_PASSWORD=Roberto@2007

# ===========================================
# AUTENTICAÇÃO
# ===========================================
JWT_SECRET=sua_chave_secreta_jwt_muito_forte_aqui_para_desenvolvimento
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# EMAIL (Gmail SMTP)
# ===========================================
GMAIL_USER=seu_email@gmail.com
GMAIL_APP_PASSWORD=sua_senha_de_app_do_gmail

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# 2FA - Configurações relaxadas para desenvolvimento
TWO_FACTOR_REQUIRED=false
TWO_FACTOR_DEV_CODES_ENABLED=true
TWO_FACTOR_CODE_EXPIRATION=3600000

# Rate Limiting - Configurações relaxadas para desenvolvimento
RATE_LIMIT_LOGIN_ATTEMPTS=10
RATE_LIMIT_LOGIN_WINDOW=300000
RATE_LIMIT_BLOCK_DURATION=300000
RATE_LIMIT_API_REQUESTS=1000
RATE_LIMIT_API_WINDOW=60000

# Sessões - Configurações relaxadas para desenvolvimento
SESSION_TIMEOUT=28800000
SESSION_MAX_ACTIVE=10
SESSION_AUTO_REFRESH=false

# Cache - Desabilitado para desenvolvimento
CACHE_ENABLED=false
CACHE_TTL=60000

# Logging - Verboso para desenvolvimento
LOG_LEVEL=debug
LOG_SQL_QUERIES=true
LOG_AUDIT=true
LOG_CONSOLE=true
LOG_PERFORMANCE=true

# Debug - Habilitado para desenvolvimento
DEBUG_ENABLED=true
DEBUG_DETAILED_ERRORS=true
DEBUG_FULL_STACK_TRACE=true

# Upload - Configurações relaxadas para desenvolvimento
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/json

# API - Configurações relaxadas para desenvolvimento
API_TIMEOUT=60000
API_RETRY_ENABLED=false
API_STRICT_VALIDATION=false

# CORS - Configurações permissivas para desenvolvimento
CORS_STRICT=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA (RELAXADAS PARA DEV)
# ===========================================

# Cookies não seguros em desenvolvimento
COOKIES_SECURE=false

# HTTPS não obrigatório em desenvolvimento
FORCE_HTTPS=false

# Headers de segurança relaxados
SECURITY_HEADERS_RELAXED=true

# ===========================================
# CONFIGURAÇÕES ESPECÍFICAS DE DESENVOLVIMENTO
# ===========================================

# Hot reload habilitado
HOT_RELOAD=true

# Source maps habilitados
SOURCE_MAPS=true

# Redux DevTools habilitado
REDUX_DEVTOOLS=true

# React DevTools habilitado
REACT_DEVTOOLS=true

# ===========================================
# CONFIGURAÇÕES DE EMAIL DE DESENVOLVIMENTO
# ===========================================

# Email de desenvolvimento (opcional)
DEV_EMAIL=dev@localhost

# SMTP de desenvolvimento (opcional)
DEV_SMTP_HOST=localhost
DEV_SMTP_PORT=1025
DEV_SMTP_SECURE=false
DEV_SMTP_USER=
DEV_SMTP_PASS=

# ===========================================
# CONFIGURAÇÕES DE BANCO DE DADOS DE DESENVOLVIMENTO
# ===========================================

# Pool de conexões menor para desenvolvimento
DB_MAX_CONNECTIONS=5
DB_QUERY_TIMEOUT=30000

# Logs de query habilitados
DB_LOG_QUERIES=true

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================

# Logs de performance habilitados
PERFORMANCE_LOGS=true

# Logs de auditoria habilitados
AUDIT_LOGS=true

# Logs de SQL habilitados
SQL_LOGS=true

# ===========================================
# NOTAS IMPORTANTES
# ===========================================
# 1. Este arquivo é específico para desenvolvimento
# 2. NUNCA use estas configurações em produção
# 3. As configurações de segurança estão relaxadas para facilitar o desenvolvimento
# 4. Para produção, use configurações mais rigorosas
# 5. Mantenha este arquivo fora do controle de versão (.gitignore)


