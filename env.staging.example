# Hostinger VPS - HOMOLOGAÇÃO (staging)
# Copie para .env.staging no servidor e ajuste valores

# Domínio para HTTPS (Caddy)
DOMAIN=staging.seudominio.com.br
LETSENCRYPT_EMAIL=admin@seudominio.com.br

# Postgres (padronizado)
POSTGRES_IMAGE=postgres:17-alpine
DB_NAME=net_imobiliaria_staging
DB_USER=postgres
DB_PASSWORD=CHANGE_ME

# App
JWT_SECRET=CHANGE_ME_SUPER_LONG
NEXT_PUBLIC_APP_URL=https://staging.seudominio.com.br
CRON_SECRET=CHANGE_ME_SUPER_LONG

# Postgres tuning (staging)
PG_SHARED_BUFFERS=256MB
PG_EFFECTIVE_CACHE_SIZE=1GB
PG_MAINTENANCE_WORK_MEM=128MB
PG_WORK_MEM=4MB
PG_MAX_CONNECTIONS=100

# Opcional (tradução do feed)
LIBRETRANSLATE_URL=https://libretranslate.com


